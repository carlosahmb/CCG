<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CriarContaActivity">

    <include
        android:id="@+id/loginXml"
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="53dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnVoltar"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_gravity="end|bottom"
        android:clickable="true"
        android:elevation="5dp"
        android:src="@drawable/voltar"
        app:maxImageSize="35dp"
        app:rippleColor="@color/common_google_signin_btn_text_light_pressed"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="10dp" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:layout_below="@id/loginXml">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criar Conta"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/username"
        android:layout_marginTop="10dp"
        app:met_floatingLabel="normal"
        android:hint="Nome"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        app:met_floatingLabel="normal"
        android:hint="Email"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hintCampo"
            app:passwordToggleEnabled="true">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/senhalogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:hint="Senha"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Criar"
        android:id="@+id/btnRegistrar"
        android:elevation="5dp"
        android:background="@drawable/botao_personalizado_sec"
        android:layout_marginTop="10dp"
        android:textColor="#fff"/>

</LinearLayout>
</RelativeLayout>