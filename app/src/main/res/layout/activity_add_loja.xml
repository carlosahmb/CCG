<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddLoja">

    <include
        android:id="@+id/barAddLoja"
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="53dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnVoltar"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/voltar"
        android:clickable="true"
        android:elevation="5dp"
        app:rippleColor="@color/common_google_signin_btn_text_light_pressed"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="10dp"
        android:layout_gravity="end|bottom"
        app:maxImageSize="35dp"/>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="109dp"
        android:layout_below="@id/barAddLoja"
        android:layout_marginTop="584dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barAddLoja"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addLoja"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:clickable="true"
            android:elevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/addloja"
            app:maxImageSize="40dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-40dp"
            android:fontFamily="sans-serif-black"
            android:text="Adicionar Loja"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>