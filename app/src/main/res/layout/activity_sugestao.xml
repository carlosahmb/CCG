<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sugestao">

    <include
        android:id="@+id/sugestaoXml"
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="53dp" />

    <TextView
        android:layout_width="258dp"
        android:layout_height="43dp"
        android:layout_alignStart="@+id/sugestaoXml"
        android:layout_alignEnd="@+id/sugestaoXml"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="59dp"
        android:gravity="center_horizontal"
        android:text="Fale Conosco"
        android:textColor="@color/colorAccent"
        android:textSize="25dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnVoltar"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_gravity="end|bottom"
        android:clickable="true"
        android:elevation="5dp"
        android:src="@drawable/voltar"
        app:maxImageSize="35dp"
        app:rippleColor="@color/common_google_signin_btn_text_light_pressed"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="604dp"
        android:layout_below="@+id/sugestaoXml"
        android:layout_marginTop="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switchAnomino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Anônimo"
            tools:layout_editor_absoluteX="251dp"
            tools:layout_editor_absoluteY="157dp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="139dp" />

        <EditText
            android:id="@+id/telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Telefone"
            android:inputType="phone"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="207dp" />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <android.support.v7.widget.AppCompatRadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Sugestão"
                android:layout_marginLeft="60dp"
                android:theme="@style/RadioButtonTheme"/>
            <android.support.v7.widget.AppCompatRadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Reclamação"
                android:layout_marginLeft="60dp"
                android:theme="@style/RadioButtonTheme"/>
            <android.support.v7.widget.AppCompatRadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Denúncia"
                android:layout_marginLeft="60dp"
                android:theme="@style/RadioButtonTheme"/>

        </RadioGroup>

        <EditText
            android:id="@+id/campoTexto"
            android:layout_width="239dp"
            android:layout_height="146dp"
            android:ems="10"
            android:layout_margin="5dp"
            android:gravity="start|top"
            android:hint="Digite aqui"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="77dp"
            tools:layout_editor_absoluteY="358dp" />

        <Button
            android:id="@+id/enviarSugestao"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/botao_personalizado_pri"
            android:elevation="5dp"
            android:text="Enviar"
            android:textColor="#fff" />

    </LinearLayout>
</RelativeLayout>